rules_version = '2';
// ========================================
// FIRESTORE SECURITY RULES - PLAYAS RD
// ========================================
// Aplicación: Playas RD
// Descripción: Descubre las mejores playas de República Dominicana
// Proyecto: playas-rd-2b475
// Entorno: PRODUCCIÓN
// Fecha: Octubre 2025
// ========================================

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funciones de ayuda
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // PLAYAS - Producción
    // Lectura pública, escritura solo para usuarios autenticados
    // En el futuro, se puede agregar verificación de rol de admin
    match /beaches/{beachId} {
      allow read: if true; // Todos pueden leer playas
      allow write: if isSignedIn(); // Solo usuarios autenticados pueden escribir
    }
    
    // REPORTES - Los usuarios pueden crear y editar sus propios reportes
    match /reports/{reportId} {
      allow read: if true;
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && 
        resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && 
        resource.data.userId == request.auth.uid;
    }
    
    // USUARIOS - Solo pueden ver y editar su propia información
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId); // Permitir que los usuarios eliminen su propia cuenta
    }
    
    // FOTOS DE VISITANTES - Todos pueden ver, usuarios autenticados pueden crear
    match /beach_photos/{photoId} {
      allow read: if true;
      allow create: if isSignedIn() && 
        request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn() && 
        resource.data.uid == request.auth.uid;
      allow update: if false; // No permitir actualizar fotos
    }
    
    // SOLICITUDES DE SOPORTE - Cualquiera puede crear (incluso sin autenticación)
    // Solo lectura para usuarios autenticados (para admins en el futuro)
    match /support_requests/{requestId} {
      allow read: if isSignedIn(); // Solo usuarios autenticados pueden leer
      allow create: if true; // Cualquiera puede crear solicitudes de soporte
      allow update, delete: if false; // Solo las Cloud Functions pueden actualizar
    }
  }
}

